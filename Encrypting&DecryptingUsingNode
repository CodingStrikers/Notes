var crypto=require('crypto'),algorithm = 'aes-256-ctr',passwordd='1234';

npm i crypto

ENCRYPTING
  function encrypt(text){
      var cipher = crypto.createCipher(algorithm,passwordd)
      var crypted = cipher.update(text,'utf8','hex')
      crypted += cipher.final('hex');
      return crypted;
  }
  
    var e=encrypt(password);
    console.log(e);

DECRYPTING
function decrypt(text){
  var decipher = crypto.createDecipher(algorithm,passwordd)
  var dec = decipher.update(text,'hex','utf8')
  dec += decipher.final('utf8');
  return dec;
 
} 
   var d = decrypt(e);
   console.log(d);  

//We need to calculate x raise to power n
var x=5;
var n=-9;
var k=1;

var fact=function(n,k)
{
  for(i=1;i<=n;i++)
{ k=k*x;  
}
return k;

}

if(n===0)
{
  console.log("1");
}
else if(n>0){
 fact(n,k);

}
else if(n<0){
  console.log("negative")
  x=1/x;
  n=-n;
 var r=fact(n,k);
 console.log(r);

}

